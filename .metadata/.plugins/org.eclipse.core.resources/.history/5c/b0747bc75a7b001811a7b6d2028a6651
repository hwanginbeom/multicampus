/*작품 내용
 *  1. 오늘 배운 내용에 한 해서 3개의 메소드를 개발
 *  2. 반복 , 조건등에 대한 연습이 될 수 있는 하나의 lab 개발 
 *  3. 마음 : 내 짝꿍을 생각 하는 마음 
 */
package step01.syntax;

public class Step10MyArt {
	
	public static void forTest() { //   삼각형 찍기 
		int a=4;
		for(int i = 1 ; i <= 5; i++) {
			for(int j = 4 ; i<=j;  j--) {
				System.out.print(" ");
			}
			for(int z=10 ; z>a*2+1; z--) {
				System.out.print("*");
			}
			System.out.println();
			a--;

		}
		
	}

	public static void main(String[] args) {
		forTest();

	}

}
